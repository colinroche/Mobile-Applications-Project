<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppProject.DetailPageViews.DessertDetail">
    <ContentPage.Content>
        <!-- Display info of dessert that is selected -->
        <StackLayout HorizontalOptions="Center">
            <Label Text="Dessert" HorizontalOptions="Center" FontSize="Small"/>
            <Image x:Name="DessertDetailImage" HeightRequest="100" WidthRequest="100"/>
            <Label x:Name="DessertDetailName" HorizontalOptions="Center"/>
            <Label x:Name="DessertDetailIngredient" Margin="20,20" FontSize="Micro"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>